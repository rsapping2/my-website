---
const { 
  title = "Rob's Tips - Software Engineering & DevOps Blog",
  description = "Practical tips, tutorials, and insights from software engineering and DevOps. Covering programming, infrastructure, CI/CD, and career advice.",
  image = "/images/default.png",
  url = Astro.url.href,
  type = "website"
} = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph for LinkedIn sharing -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url.origin).href} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: system-ui, sans-serif;
        background: #f9f9f9;
        color: #333;
      }

      .content {
        padding-bottom: 60px; /* Prevent content being hidden behind the footer */
      }

      header {
        background: #222;
        color: white;
        padding: 1rem 2rem;
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .nav-links {
        display: flex;
        gap: 1.5rem;
        align-items: center;
      }

      .nav-links a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        padding: 0.5rem 0;
        transition: color 0.2s ease;
      }

      .nav-links a:hover {
        color: #007acc;
      }

      .hamburger {
        display: none;
        flex-direction: column;
        cursor: pointer;
        padding: 0.5rem;
      }

      .hamburger span {
        width: 25px;
        height: 3px;
        background: white;
        margin: 3px 0;
        transition: 0.3s;
      }

      .mobile-nav {
        display: none;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #444;
      }

      .mobile-nav a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        padding: 0.5rem 0;
        transition: color 0.2s ease;
      }

      .mobile-nav a:hover {
        color: #007acc;
      }

      @media (max-width: 768px) {
        header {
          padding: 1rem;
        }
        
        .nav-links {
          display: none;
        }
        
        .hamburger {
          display: flex;
        }
        
        .mobile-nav.open {
          display: flex;
        }
      }

      main {
        max-width: 90%;       /* content will take up 90% of viewport width */
        width: 100%;          /* ensures it can shrink on smaller screens */
        margin: 2rem auto;    /* centers content */
        padding: 0 1rem;
        box-sizing: border-box;
      }

      @media (min-width: 768px) {
        main {
          max-width: 800px;   /* better reading width on tablets */
        }
      }

      @media (min-width: 1024px) {
        main {
          max-width: 1000px;  /* caps width on large screens */
        }
      }

      footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 60px;
        background: #222;
        color: white;
        text-align: center;
        line-height: 60px;
        font-size: 0.9rem;
        z-index: 10;
      }

      article {
        background: white;
        padding: 2rem;
        margin-bottom: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        line-height: 1.7;
      }

      article h1 {
        color: #333;
        margin-bottom: 1rem;
        font-size: 2.2rem;
      }

      article h2 {
        color: #333;
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.6rem;
      }

      article h3 {
        color: #333;
        margin-top: 1.5rem;
        margin-bottom: 0.8rem;
        font-size: 1.3rem;
      }

      article p {
        margin-bottom: 1.2rem;
        color: #555;
      }

      article p.description {
        color: #666;
        font-style: italic;
        font-size: 1.1rem;
      }

      article a {
        color: #007acc;
        text-decoration: none;
      }

      article a:hover {
        text-decoration: underline;
      }

      article ul, article ol {
        margin-bottom: 1.2rem;
        padding-left: 2rem;
      }

      article li {
        margin-bottom: 0.5rem;
        color: #555;
      }

      article blockquote {
        border-left: 4px solid #007acc;
        padding-left: 1.5rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #666;
      }

      article code {
        background: #f4f4f4;
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        font-size: 0.9em;
      }

      article pre {
        background: #f4f4f4;
        padding: 1.5rem;
        border-radius: 6px;
        overflow-x: auto;
        margin: 1.5rem 0;
      }

      article pre code {
        background: none;
        padding: 0;
      }

      @media (max-width: 768px) {
        article {
          padding: 1.5rem 1rem;
          margin-bottom: 1.5rem;
        }
        
        article h1 {
          font-size: 1.8rem;
        }
        
        article h2 {
          font-size: 1.4rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="content">
      <header>
        <div class="nav-container">
          <div class="nav-links">
            <a href="/">Home</a>
            <a href="/posts">Posts</a>
            <a href="/tutorials">Tutorials</a>
            <a href="/learning-path">DevOps Learning Path</a>
            <a href="/aboutme">About Me</a>
          </div>
          <div class="hamburger" onclick="toggleMobileNav()">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
        <div class="mobile-nav" id="mobileNav">
          <a href="/">Home</a>
          <a href="/posts">Posts</a>
          <a href="/tutorials">Tutorials</a>
          <a href="/learning-path">DevOps Learning Path</a>
          <a href="/aboutme">About Me</a>
        </div>
      </header>

      <script>
        function toggleMobileNav() {
          const mobileNav = document.getElementById('mobileNav');
          mobileNav.classList.toggle('open');
        }
      </script>

      <main>
        <slot />
      </main>
    </div>

    <footer>
      &copy; {new Date().getFullYear()} Rob's Tips. All rights reserved.
    </footer>
  </body>
</html>
