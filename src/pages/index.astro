---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/index.css';

interface PostModule {
  frontmatter: {
    title: string;
    pubDate: string;
    description: string;
    [key: string]: any;
  };
}

const postImports = import.meta.glob('../content/blog/*.md');

// console.log("Imports");

// console.log(Object.keys(postImports));


const posts = [];

for (const path in postImports) {
  const postModule = (await postImports[path]()) as PostModule;

  posts.push({
    frontmatter: postModule.frontmatter ?? {},
    url: path.replace('../content/blog', '/blog').replace('.md', ''),
  });
}

// console.log('All posts:', posts);

posts.sort((a, b) => {
  const dateA = new Date(a.frontmatter.pubDate).getTime();
  const dateB = new Date(b.frontmatter.pubDate).getTime();

  return dateB - dateA; // descending order
});

const latestThree = posts.slice(0, 5);
---

<BaseLayout>
  <h1>Welcome to Rob's Tips</h1>

  <section>
    {latestThree.length > 0 ? (
      latestThree.map((post) => {
        const imgSrc = post.frontmatter?.image || '/images/default.png';
        
        // Check if image exists, fallback to default
        const imageExists = post.frontmatter?.image && post.frontmatter.image !== '/images/default.png';
        const finalImgSrc = imageExists ? post.frontmatter.image : '/images/default.png';


        return (
            <article class="post-preview">
            <img
              src={finalImgSrc}
              alt={`Featured image for ${post.frontmatter.title} - ${post.frontmatter.description}`}
              loading="lazy"
              decoding="async"
              onerror="this.src='/images/default.png'"
            />
            <div class="post-content">
              <h2><a href={post.url}>{post.frontmatter.title}</a></h2>
              <div class="post-meta">
                <span class="post-date">{new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', { timeZone: 'America/Los_Angeles' })}</span>
                <span class="reading-time">5 min read</span>
              </div>
              <p class="post-description">{post.frontmatter.description}</p>
              <a href={post.url} class="read-more">Read more →</a>
            </div>
          </article>
        );
      })
    ) : (
      <p>No posts found.</p>
    )}
  </section>

  <div class="view-more">
    <a href="/posts" class="view-more-link">View More Posts →</a>
  </div>

</BaseLayout>

